@model IEnumerable<VillaNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row  pb-2">
        <div class="col ">
            <h1 class="text-primary ">List Villa</h1>
        </div>
        <div class="col text-end  pt-1">

            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-primary "> Create villa  Number <i class="bi bi-plus-lg"></i> </a>
        </div>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>
                <th>
                    Villa Number
                </th>

                <th>

                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>
                        @villa.villa.Name
                    </td>
                    <td>
                        @villa.VillaNo
                    </td>

                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@villa.VillaNo" class="btn btn-primary mx-4 "> Edit <i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@villa.VillaNo" class="btn btn-danger "> Delete<i class="bi bi-trash-fill"></i> </a>

                    </td>
                </tr>
            }
        </tbody>

    </table>


</div>

