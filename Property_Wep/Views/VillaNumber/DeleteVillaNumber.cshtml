@model VillaNumberDTO

<form asp-action="DeleteVillaNumber" method="post">
    <div class="container border p-3">
        <h1 class="text-primary"> Delete Villa Number</h1>
        <hr />

        <div class="row">

            <input type="hidden" asp-for="VillaNo" />
            <div class="col-2">
                <label class="control-label pt-2 " asp-for="VillaNo" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="VillaNo" />
               
            </div>

            <div class="col-2 ">
                <label class="control-label pt-2 " asp-for="VillaId" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="villa.Name" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="SpecialDetails" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled class="form-control" asp-for="SpecialDetails" rows="5"></textarea>

               
            </div>



            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class=" btn btn-primary form-control"> Back To List</a>
            </div>
            <div class="col-5 ">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>
    </div>


</form>




