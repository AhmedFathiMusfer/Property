@model VillaNumberCreateDTO

<form asp-action="CreateVillaNumber" method="post">
    <div class="container border p-3">
        <h1 class="text-primary"> Create Villa Number</h1>
        <hr />

        <div class="row">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="VillaNo" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="VillaNo" />
                <span asp-validation-for="VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2 ">
                <label class="control-label pt-2 " asp-for="VillaId" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <select class="form-control" asp-for="VillaId" asp-items="@ViewBag.Villas">
                 
               </select>
                <span asp-validation-for="VillaId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="SpecialDetails" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" asp-for="SpecialDetails" rows="5"></textarea>

                <span asp-validation-for="SpecialDetails" class="text-danger"></span>
            </div>

           

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class=" btn btn-primary form-control"> Back To List</a>
            </div>
            <div class="col-5 ">
                <input type="submit" value="Create" class="btn btn-success form-control" />

            </div>

        </div>
    </div>


</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

