@model VillaUpdateDTO

<form asp-action="UpdateVilla" method="post">
    <div class="container border p-3">
        <h1 class="text-primary"> Create Villa</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Name" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2 ">
                <label class="control-label pt-2 " asp-for="Rate" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Rate" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Details" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" asp-for="Details" rows="5"></textarea>

                <span asp-validation-for="Details" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="ImageUrl" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="ImageUrl" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Occupancy" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Occupancy" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Sqft" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Sqft" />
                <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Amenity" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" asp-for="Amenity" rows="5"></textarea>

                <span asp-validation-for="Amenity" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="Villa" class=" btn btn-primary form-control"> Back To List</a>
            </div>
            <div class="col-5 ">
                <input type="submit" value="Update" class="btn btn-success form-control" />

            </div>

        </div>
    </div>


</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

