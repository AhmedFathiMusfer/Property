@model VillaDTO

<form asp-action="DeleteVilla" method="post">
    <div class="container border p-3">
        <h1 class="text-primary"> Delete Villa</h1>
        <hr />

        <div class="row">
           
            <input type="hidden" asp-for="Id" />
            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Name" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input  class="form-control" asp-for="Name" />
                
            </div>

            <div class="col-2 ">
                <label class="control-label pt-2 " asp-for="Rate" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="Rate" />
         
            </div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Details" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled class="form-control" asp-for="Details" rows="5"></textarea>

        
            </div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="ImageUrl" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="ImageUrl" />
              
            </div>


            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Occupancy" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="Occupancy" />
              
            </div>

            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Sqft" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <input disabled class="form-control" asp-for="Sqft" />
              
            </div>
            <div class="col-2">
                <label class="control-label pt-2 " asp-for="Amenity" style="font-size:20;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea disabled class="form-control" asp-for="Amenity" rows="5"></textarea>

              
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="Villa" class=" btn btn-primary form-control"> Back To List</a>
            </div>
            <div class="col-5 ">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>
    </div>


</form>



